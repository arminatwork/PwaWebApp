@model Pwa.Application.Contracts.Account.User.SmsVerifyDto
@{
    ViewData["Title"] = "تایید حساب کاربری";
    Layout = "_AuthLayout";
}

<h3 class="title">
    تایید حساب کاربری
</h3>
<h4 class="description">
    زمان باقی مانده
    <span class="link__color" data-count-num="30">
        30
    </span>
    ثانیه
</h4>
<form asp-action="VerifyAccount" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="PhoneNumber"/>
    <input type="hidden" asp-for="RememberMe"/>
    <input asp-for="Code" placeholder="لطفا کد را وارد کنید">
    <span asp-validation-for="Code"></span>
    <button type="submit">
        تایید حساب
    </button>
</form>
<div class="retry__send__sms d-none">
    <h5>آیا کد برای شما ارسال نشد ؟</h5>
    <a asp-action="VerifyAccount" class="link__color">
        ارسال مجدد
    </a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
<script src="/Main/js/countdown.js"></script>
}